<h2 class="mt-4">Create New Course</h2>
<% include ./partials/messages %>
<form action="/createCourse" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label class="col-form-label" for="inputDefault">Course Name</label>
    <input
      type="text"
      class="form-control"
      name="courseName"
      placeholder="Course name"
      value="<%= typeof courseName != 'undefined' ? courseName : '' %>"
    />
  </div>
  <div class="form-group">
    <label class="col-form-label" for="inputDefault">Course Subject</label>
    <input
      type="text"
      class="form-control"
      name="subjectName"
      placeholder="Course subject"
      value="<%= typeof subjectName != 'undefined' ? subjectName : '' %>"
    />
  </div>
  <div class="form-group">
    <label for="exampleSelect1">Total Topics</label>
    <select class="form-control" id="inputPdf" name="totalTopics">
      <option value="0">select</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5(max.)</option>
    </select>
  </div>
  <div id="pdfElement"></div>
  <br />
  <div class="form-group">
    <label for="exampleTextarea">Course Description</label>
    <textarea
      class="form-control"
      id="exampleTextarea"
      rows="3"
      name="description"
      value="<%= typeof description != 'undefined' ? description : '' %>"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-block">Create +</button>
</form>
<script src="/js/createcourse.js"></script>

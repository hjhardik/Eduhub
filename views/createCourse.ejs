<h2 class="mt-4">Create New Course</h2>
<div class="form-group">
  <label class="col-form-label" for="inputDefault">Course Name</label>
  <input
    type="text"
    class="form-control"
    placeholder="Default input"
    id="inputDefault"
  />
</div>
<div class="form-group">
  <label class="col-form-label" for="inputDefault">Course Subject</label>
  <input
    type="text"
    class="form-control"
    placeholder="Default input"
    id="inputDefault"
  />
</div>

<div class="form-group">
  <fieldset>
    <label class="control-label" for="readOnlyInput">Teacher Name</label>
    <input
      class="form-control"
      id="readOnlyInput"
      type="text"
      placeholder="Mr. J Cole"
      readonly=""
    />
  </fieldset>
</div>
<div class="form-group">
  <label for="exampleSelect1">Total Topics</label>
  <select class="form-control" id="exampleSelect1">
    <option>1</option>
    <option>2</option>
    <option>3</option>
    <option>4</option>
    <option>5(max.)</option>
  </select>
</div>
<div class="form-group">
  <label for="exampleTextarea">Course Description</label>
  <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
</div>
<button type="submit" class="btn btn-primary btn-block">Create</button>

<link rel="stylesheet" href="/css/allCourses.css" />
<div class="col-md-12 text-center"><h3>Product Carousel</h3></div>
<div class="col-md-6 col-md-offset-3">
  <div
    class="carousel slide"
    data-ride="carousel"
    data-type="multi"
    data-interval="3000"
    id="myCarousel"
  >
    <div class="carousel-inner">
      <div class="item active">
        <div class="col-md-3 col-sm-6 col-xs-12">
          <a href="#"
            ><img
              src="http://placehold.it/500/e499e4/fff&amp;text=1"
              class="img-responsive"
          /></a>
        </div>
      </div>
      <div class="item">
        <div class="col-md-3 col-sm-6 col-xs-12">
          <div
            class="card text-white bg-secondary mb-3"
            style="max-width: 20rem;"
          >
            <div class="card-header">Course</div>
            <div class="card-body">
              <h4 class="card-title">Course One</h4>
              <p class="card-text">Course Description</p>
              <p class="card-text">Total Topics</p>
              <a href="#" class="card-link">Go to Course</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev"
      ><i class="glyphicon glyphicon-chevron-left"></i
    ></a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next"
      ><i class="glyphicon glyphicon-chevron-right"></i
    ></a>
  </div>
</div>
<script src="/js/allCourses.js"></script>

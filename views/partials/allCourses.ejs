<link rel="stylesheet" href="/css/latestCourses.css" />
<div class="row mb-2">
  <div class="col text-center">
    <h4>All Courses</h4>
  </div>
</div>
<div class="row">
  <% allCourses.forEach((course)=>{ %>
  <div class="col-sm-12 col-md-4 col-lg-3">
    <div class="card text-white bg-primary">
      <div class="card-header">
        <%= course.subjectName.toUpperCase() %>
      </div>
      <div class="card-body">
        <h4 class="card-title"><%= course.courseName.toUpperCase() %></h4>
        <p class="card-text">Teacher : <%= course.teacherName %></p>
        <p class="card-text" style="font-style: italic;"><%= course.description %></p>
        <p class="card-text">Total Topics : <%= course.totalTopics %></p>
        <a href=<%=`/course/${course._id}`%> class="card-link allCourses">Go to Course</a>
      </div>
    </div>
  </div>
  <% }); %>
</div>
